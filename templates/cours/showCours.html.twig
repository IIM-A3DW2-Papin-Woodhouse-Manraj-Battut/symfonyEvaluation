{% extends 'base.html.twig'%}

{% block body %}
    <div class="container w-full p-24 px-48 pb-24">
        <h1 class="text-3xl font-bold">{{ cours.nom }}</h1>
        <p class="text-gray-500 text-xs">{{ cours.categorie.nom }} - {{ cours.date|date('d/m/Y') }}</p>
        <p class="text-gray-700 mb-10 leading-tight text-sm">{{ cours.description }}</p>
        <p class="font-semibold">{{ cours.contenu }}</p>
    </div>
    
{% endblock %}
