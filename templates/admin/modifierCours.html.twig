{% extends 'base.html.twig' %}

{% block body %}
    <div class="container w-full p-24 px-48 pb-24">
        <h1 class="text-3xl font-bold">{{"general.modifier"|trans}} : {{ cours.nom }}</h1>

        {{ form_start(modifierCours) }}
        <div class="ml-6 grid grid-flow-row auto-rows-max">
            <h3 class="text-l mr-2">
                {{ form_label(modifierCours.nom) }}
            </h3>
            {{ form_widget(modifierCours.nom) }}

            <h3 class="text-l mr-2">
                {{ form_label(modifierCours.description) }}
            </h3>
            {{ form_widget(modifierCours.description) }}

            <h3 class="text-l mr-2">
                {{ form_label(modifierCours.contenu) }}
            </h3>
            {{ form_widget(modifierCours.contenu) }}

            <h3 class="text-l mr-2">
                {{ form_label(modifierCours.categorie) }}
            </h3>
            {{ form_widget(modifierCours.categorie) }}
        </div>

        {{ form_end(modifierCours) }}
    </div>

{% endblock %}
